#: set padding 50

FloatLayout:
    FloatLayout:
        id: restart_button_layout
        size: [100, 100]
        size_hint: (None,None)
        pos_hint: {'center_x': 0.7, 'center_y': 0.725}
        Button:
            background_normal: "restart_normal.png"
            background_down: "restart_down.png"
            size: self.size
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: board.restart()
        Image:
            source: "restart.png"
            size: [93, 93]
            size_hint: (None,None)
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
    Image:
        source: "2048logo.png"
        size: [500, 500]                   
        size_hint: (None,None)
        pos_hint: {'center_x': 0.7,'center_y': 0.82}
    FloatLayout:
        size_hint: .40, .25
        pos_hint: {'center_x': 0.25 ,'center_y': 0.8}
        Label:
            id: highest_score_board
            text: "BEST SCORE"
            color: "0070fa"
            font_size: "15sp"
            pos_hint: {'center_x': 0.5,'center_y': 0.74}
        Label:
            id: highest_score
            text: "0"
            color: "ffffff"
            font_size: '35sp'
            pos_hint: {'center_x': 0.5,'center_y': 0.6}
        Label:
            id: score_board
            text: "SCORE"
            color: "0070fa"
            font_size: "15sp"
            pos_hint: {'center_x': 0.5,'center_y': 0.34}
        Label:
            id: score
            text: "0"
            color: "ffffff"
            font_size: '35sp'
            pos_hint: {'center_x': 0.5,'center_y': 0.2}
    Board:
        id: board
        size: [min(root.width, root.height)-2*padding]*2
        size_hint: (None,None)
        pos_hint:{'center_x':0.5, 'center_y': 0.45}

<Tile>:
    canvas:
        Color:
            rgb: self.color
        BorderImage:
            pos: self.pos
            size: self.size
            source : 'round.png'
    Label:
        pos : root.pos
        size : root.size
        bold : True
        color: root.number_color
        font_size: root.font_size
        text: str(root.number)